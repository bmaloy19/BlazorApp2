</div>

<style>
    .home-container {
        max-width: 1200px;
        margin: 0 auto;
    }
    
    .home-hero {
        text-align: center;
        padding: var(--space-2xl, 3rem) var(--space-lg, 1.5rem);
    }
    
    .hero-content {
        max-width: 600px;
        margin: 0 auto;
    }
    
    .hero-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100px;
        height: 100px;
        margin: 0 auto var(--space-lg, 1.5rem);
        background: linear-gradient(135deg, var(--brand-primary, #d10000) 0%, var(--brand-primary-hover, #a00000) 100%);
        border-radius: var(--radius-xl, 16px);
        color: var(--color-white, #fff);
        box-shadow: 0 8px 24px rgba(209, 0, 0, 0.3);
    }
    
    .hero-title {
        font-size: var(--text-4xl, 2.5rem);
        font-weight: var(--font-bold, 700);
        color: var(--text-primary, #1a1a1a);
        margin: 0 0 var(--space-md, 1rem) 0;
        line-height: 1.2;
    }
    
    .hero-subtitle {
        font-size: var(--text-lg, 1.125rem);
        color: var(--text-secondary, #666);
        margin: 0 0 var(--space-xl, 2rem) 0;
        line-height: 1.6;
    }
    
    .hero-actions {
        display: flex;
        gap: var(--space-md, 1rem);
        justify-content: center;
        flex-wrap: wrap;
    }
    
    .btn-lg {
        padding: var(--space-md, 1rem) var(--space-xl, 2rem);
        font-size: var(--text-base, 1rem);
    }
    
    .features-section {
        padding: var(--space-2xl, 3rem) var(--space-lg, 1.5rem);
        background: var(--bg-muted, #f5f5f5);
        border-radius: var(--radius-2xl, 24px) var(--radius-2xl, 24px) 0 0;
        margin-top: var(--space-xl, 2rem);
    }
    
    .features-title {
        text-align: center;
        font-size: var(--text-2xl, 1.5rem);
        font-weight: var(--font-semibold, 600);
        color: var(--text-primary, #1a1a1a);
        margin: 0 0 var(--space-xl, 2rem) 0;
    }
    
    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: var(--space-lg, 1.5rem);
        max-width: 1000px;
        margin: 0 auto;
    }
    
    .feature-card {
        background: var(--bg-card, #fff);
        border-radius: var(--radius-lg, 12px);
        padding: var(--space-lg, 1.5rem);
        text-align: center;
        box-shadow: var(--shadow-sm, 0 1px 3px rgba(0, 0, 0, 0.06));
        transition: all var(--transition-base, 250ms ease);
    }
    
    .feature-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-md, 0 4px 6px rgba(0, 0, 0, 0.07));
    }
    
    .feature-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 64px;
        height: 64px;
        margin: 0 auto var(--space-md, 1rem);
        background: rgba(209, 0, 0, 0.1);
        border-radius: var(--radius-lg, 12px);
        color: var(--brand-primary, #d10000);
    }
    
    .feature-card h3 {
        font-size: var(--text-lg, 1.125rem);
        font-weight: var(--font-semibold, 600);
        color: var(--text-primary, #1a1a1a);
        margin: 0 0 var(--space-sm, 0.5rem) 0;
    }
    
    .feature-card p {
        font-size: var(--text-sm, 0.875rem);
        color: var(--text-muted, #999);
        margin: 0;
        line-height: 1.5;
    }
    
    @@media (max-width: 640px) {
        .hero-title {
            font-size: var(--text-3xl, 2rem);
        }
        
        .hero-actions {
            flex-direction: column;
        }
        
        .hero-actions .btn {
            width: 100%;
        }
    }
</style>
