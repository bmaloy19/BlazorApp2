@*
    ConfirmDialog Component
    Modal dialog for confirmations (delete, etc.)
    
    Usage:
    <ConfirmDialog @ref="_confirmDialog"
        Title="Delete Vehicle"
        Message="Are you sure you want to delete this vehicle?"
        ConfirmText="Delete"
        ConfirmVariant="ConfirmDialog.ButtonVariant.Danger"
        OnConfirm="HandleDelete">
        <Content>
            <p>This action cannot be undone.</p>
        </Content>
    </ConfirmDialog>
    
    @code {
        private ConfirmDialog _confirmDialog;
        
        private void ShowDeleteConfirmation() {
            _confirmDialog.Show();
        }
    }
*@

@if (_isVisible)
{
    <div class="modal-backdrop" @onclick="Hide"></div>
    <div class="modal-container">
        <div class="modal-dialog @DialogSizeClass" @onclick:stopPropagation="true">
            <div class="modal-header">
                @if (IconVariant is not null)
                {
                    <div class="modal-icon icon-@(IconVariant?.ToString().ToLower() ?? "info")">
                        @if (Icon is not null)
                        {
                            @Icon
                        }
                        else if (IconVariant == IconType.Danger)
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                            </svg>
                        }
                        else if (IconVariant == IconType.Warning)
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                            </svg>
                        }
                        else if (IconVariant == IconType.Success)
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                            </svg>
                        }
                    </div>
                }
                <h3 class="modal-title">@Title</h3>
            </div>
            <div class="modal-body">
                @if (!string.IsNullOrEmpty(Message))
                {
                    <p>@Message</p>
                }
                @if (Content is not null)
                {
                    @Content
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="Hide" disabled="@_isProcessing">
                    @CancelText
                </button>
                <button type="button" class="btn @ConfirmButtonClass" @onclick="Confirm" disabled="@_isProcessing">
                    @if (_isProcessing)
                    {
                        <span class="spinner spinner-sm"></span>
                        <span>Processing...</span>
                    }
                    else
                    {
                        @ConfirmText
                    }
                </button>
            </div>
        </div>
    </div>
}

@code {
    private bool _isVisible;
    private bool _isProcessing;

    [Parameter] public string Title { get; set; } = "Confirm";
    [Parameter] public string? Message { get; set; }
    [Parameter] public RenderFragment? Content { get; set; }
    [Parameter] public RenderFragment? Icon { get; set; }
    [Parameter] public IconType? IconVariant { get; set; }
    [Parameter] public string ConfirmText { get; set; } = "Confirm";
    [Parameter] public string CancelText { get; set; } = "Cancel";
    [Parameter] public ButtonVariant ConfirmVariant { get; set; } = ButtonVariant.Primary;
    [Parameter] public DialogSize Size { get; set; } = DialogSize.Default;
    [Parameter] public EventCallback OnConfirm { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    private string DialogSizeClass => Size switch
    {
        DialogSize.Large => "modal-dialog-lg",
        DialogSize.ExtraLarge => "modal-dialog-xl",
        _ => ""
    };

    private string ConfirmButtonClass => ConfirmVariant switch
    {
        ButtonVariant.Danger => "btn-danger",
        ButtonVariant.Success => "btn-success",
        ButtonVariant.Warning => "btn-warning",
        _ => "btn-primary"
    };

    public void Show()
    {
        _isVisible = true;
        _isProcessing = false;
        StateHasChanged();
    }

    public void Hide()
    {
        _isVisible = false;
        _isProcessing = false;
        OnCancel.InvokeAsync();
        StateHasChanged();
    }

    private async Task Confirm()
    {
        _isProcessing = true;
        StateHasChanged();
        
        await OnConfirm.InvokeAsync();
        
        _isProcessing = false;
        _isVisible = false;
        StateHasChanged();
    }

    public enum ButtonVariant { Primary, Danger, Success, Warning }
    public enum DialogSize { Default, Large, ExtraLarge }
    public enum IconType { Danger, Warning, Success, Info }
}

