@* 
    PageHeader Component
    Reusable page header with consistent styling
    
    Usage:
    <PageHeader Title="My Garage" Subtitle="Manage your vehicles">
        <Actions>
            <button class="btn btn-primary">Add Vehicle</button>
        </Actions>
    </PageHeader>
*@

<div class="page-header-container">
    @if (ShowBackButton)
    {
        <button class="btn-back" @onclick="OnBackClick">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
            </svg>
            @BackButtonText
        </button>
    }
    
    <div class="page-header">
        <div class="page-header-content">
            <h1 class="page-header-title">@Title</h1>
            @if (!string.IsNullOrEmpty(Subtitle))
            {
                <p class="page-header-subtitle">@Subtitle</p>
            }
        </div>
        @if (Actions is not null)
        {
            <div class="page-header-actions">
                @Actions
            </div>
        }
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public string? Subtitle { get; set; }
    [Parameter] public RenderFragment? Actions { get; set; }
    [Parameter] public bool ShowBackButton { get; set; }
    [Parameter] public string BackButtonText { get; set; } = "Back";
    [Parameter] public EventCallback OnBackClick { get; set; }
}

